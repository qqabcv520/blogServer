<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="myblogSessionFactory">
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/myblog</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <mapping class="lol.mifan.myblog.model.ArticleEntity"/>
        <mapping class="lol.mifan.myblog.model.ArticletagEntity"/>
        <mapping class="lol.mifan.myblog.model.TagEntity"/>
        <mapping class="lol.mifan.myblog.model.UsersEntity"/>
    </session-factory>
</hibernate-configuration>
